<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#f3161616"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Buble Sort"
        android:textSize="24sp"
        android:layout_margin="12dp"
        android:background="#f6f8cf04"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <com.example.shaurav.sorts.AnimatedGifImageView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/animatedGifImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#f6b86c20"
        android:text="Complexity (average) : n^2"/>
    <Button

        android:id="@+id/send"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:onClick="backToMain"/>

</LinearLayout>
